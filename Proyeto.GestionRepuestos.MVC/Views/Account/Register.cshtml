@model Proyeto.GestionRepuestos.MVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Registrarse";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h5 class="mb-3">Cree una cuenta nueva.</h5>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.Nombre, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.Apellido, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.SelectedRole, "Rol", htmlAttributes: new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.SelectedRole, Model.Roles, "-- Seleccione un rol --", new { @class = "form-select" })
                                @Html.ValidationMessageFor(m => m.SelectedRole, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 col-form-label" })
                            <div class="col-md-9">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-3 col-md-9">
                                <input type="submit" value="Registrar Usuario" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}