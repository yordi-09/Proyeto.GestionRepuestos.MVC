@{
    ViewBag.Title = "Solicitar Repuesto";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SolicitudSuccess"] != null)
                    {
                        <div class="alert alert-success">@TempData["SolicitudSuccess"]</div>
                    }
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="repuestoId" class="form-label">Repuesto</label>
                            @Html.DropDownList("repuestoId", (SelectList)ViewBag.Repuestos, "Seleccione un repuesto", new { @class = "form-select", required = "required" })
                        </div>
                        <div class="mb-3">
                            <label for="cantidadSolicitada" class="form-label">Cantidad</label>
                            <input type="number" name="cantidadSolicitada" class="form-control" min="1" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Solicitar</button>
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>