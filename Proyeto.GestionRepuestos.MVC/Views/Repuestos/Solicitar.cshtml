@{
    ViewBag.Title = "Solicitar Repuesto";
}
<h2>@ViewBag.Title</h2>
@if (TempData["SolicitudSuccess"] != null)
{
    <div class="alert alert-success">@TempData["SolicitudSuccess"]</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="repuestoId">Repuesto</label>
        @Html.DropDownList("repuestoId", (SelectList)ViewBag.Repuestos, "Seleccione un repuesto", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="cantidadSolicitada">Cantidad</label>
        <input type="number" name="cantidadSolicitada" class="form-control" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Solicitar</button>
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
