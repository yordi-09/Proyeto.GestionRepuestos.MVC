@{
    ViewBag.Title = "Solicitar repuesto";
    var solicitudes = ViewBag.SolicitudesUsuario as List<Proyeto.GestionRepuestos.MVC.Models.SolicitudRepuesto>;
}
<div class="container mt-8">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@ViewBag.Title</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SolicitudSuccess"] != null)
                    {
                        <div class="alert alert-success">@TempData["SolicitudSuccess"]</div>
                    }
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                    <div class="justify-content-center">

                        <div class="mb-3">
                            <label for="repuestoId" class="form-label">Repuesto</label>
                            @Html.DropDownList("repuestoId", (SelectList)ViewBag.Repuestos, "Seleccione un repuesto", new { @class = "form-select", required = "required" })
                        </div>
                        <div class="mb-3">
                            <label for="cantidadSolicitada" class="form-label">Cantidad</label>
                            <input type="number" name="cantidadSolicitada" class="form-control" min="1" required />
                        </div>
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Solicitar</button>
                        </div>
                    </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                    @* Listado de solicitudes del usuario *@
                    @if (solicitudes != null && solicitudes.Any())
                    {
                        <hr />
                        <h5 class="mt-4">Mis Solicitudes</h5>
                        <div class="table-responsive">
                            <table class="table table-bordered table-sm align-middle mt-2">
                                <thead class="table-light">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Repuesto</th>
                                        <th>Cantidad</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in solicitudes)
                                    {
                                        <tr>
                                            <td>@s.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@s.Repuesto.Nombre</td>
                                            <td>@s.CantidadSolicitada</td>
                                            <td>@s.Estado</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-4" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            No tienes solicitudes de repuestos creadas.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>