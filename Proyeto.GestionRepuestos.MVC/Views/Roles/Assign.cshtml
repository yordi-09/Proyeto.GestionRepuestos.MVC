@{
    ViewBag.Title = "Asignar Rol a Usuario";
}
<h2>Asignar Rol a Usuario</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="userId">Usuario</label>
        @Html.DropDownList("userId", (SelectList)ViewBag.Users, "Seleccione un usuario", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="roleName">Rol</label>
        @Html.DropDownList("roleName", (SelectList)ViewBag.Roles, "Seleccione un rol", new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Asignar</button>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-default" })
}
@Html.ValidationSummary()